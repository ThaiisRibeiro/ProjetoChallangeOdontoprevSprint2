@model Domain.Entities.ContasReceber
@{
    ViewData["Title"] = "Criar contas receber";
}

<div class="text-center">
    <h1 class="display-4">Editar Contas a Receber</h1>
</div>


<form asp-controller="ContasReceberWeb" asp-action="Atualizar" method="post">

    <input type="hidden" asp-for="id_conta_receber" />
    <div class="form-group">
        <label for="nome" class="form-label">valor</label>
        <input type="text" asp-for="valor" class="form-control" placeholder="Digite o valor a receber">
        @Html.ValidationMessageFor(x => x.valor)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">data emissao</label>
        <input type="text" asp-for="data_emissao" class="form-control" placeholder="Digite a data emissao">
        @Html.ValidationMessageFor(x => x.data_emissao)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">data vencimento</label>
        <input type="text" asp-for="data_vencimento" class="form-control" placeholder="Digite o vencimento">
        @Html.ValidationMessageFor(x => x.data_vencimento)
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="ContasReceberWeb" role="button">Voltar</a>

</form>
