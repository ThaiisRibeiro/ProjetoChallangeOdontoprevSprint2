@model List<Domain.Entities.Agendamento>
@{
    ViewData["Title"] = "Listagem de Agendamento";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="AgendamentoWeb" asp-action="Adcionar" role="button">Adicionar novo agendamento</a>
    </div>

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de agendamento</h1>

    <table id="table-Agendamento" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Data do agendamento</th>
                <th scope="col">Data do atendimento</th>
              
               
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var Agendamento in Model)
                {
                    <tr>
                        <th scope="row">@Agendamento.id_agendamento</th>
                        <td>@Agendamento.data_agendamento</td>
                        <td>@Agendamento.data_atendimento</td>
                    
                        
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-action="Atualizar" asp-controller="AgendamentoWeb" asp-route-id="@Agendamento.id_agendamento" class="btn btn-primary">Editar</a>
                                <a role="button" asp-action="Excluir" asp-controller="AgendamentoWeb" asp-route-id="@Agendamento.id_agendamento" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum Paciente encontrado</td></tr>
            }
        </tbody>
    </table>

</div>

