@model List<Domain.Entities.Fraude>
@{
    ViewData["Title"] = "Listagem de Fraude";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="FraudeWeb" asp-action="Adcionar" role="button">Adicionar nova fraude</a>
    </div>

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de Fraude</h1>

    <table id="table-Paciente" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tipo da Fraude</th>
                <th scope="col">Descricao</th>
                
               
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var Fraude in Model)
                {
                    <tr>
                        <th scope="row">@Fraude.id_fraude</th>
                        <td>@Fraude.tipo_fraude</td>
                        <td>@Fraude.descricao</td>
                        
                        
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-action="Atualizar" asp-controller="FraudeWeb" asp-route-id="@Fraude.id_fraude" class="btn btn-primary">Editar</a>
                                <a role="button" asp-action="Excluir" asp-controller="FraudeWeb" asp-route-id="@Fraude.id_fraude" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhuma Fraude encontrado</td></tr>
            }
        </tbody>
    </table>

</div>

