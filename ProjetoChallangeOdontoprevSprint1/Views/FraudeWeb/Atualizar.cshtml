@model Domain.Entities.Fraude
@{
    ViewData["Title"] = "Criar fraude";
}

<div class="text-center">
    <h1 class="display-4">Editar Fraude</h1>
</div>


<form asp-controller="FraudeWeb" asp-action="Atualizar" method="post">

    <input type="hidden" asp-for="id_fraude" />
    <div class="form-group">
        <label for="nome" class="form-label">Tipo Fraude</label>
        <input type="text" asp-for="tipo_fraude" class="form-control" placeholder="Tipo da Fraude">
        @Html.ValidationMessageFor(x => x.tipo_fraude)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Descricao</label>
        <input type="text" asp-for="descricao" class="form-control" placeholder="Digite o Descricao">
        @Html.ValidationMessageFor(x => x.descricao)
    </div>

    <br>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="FraudeWeb" role="button">Voltar</a>

</form>
